@page  "/makes/create/"
@inject HttpClient _client
@inject NavigationManager _navManage

<h3 class="card-title">Create New Makes</h3>
<hr />
<br />

<MakesFormComponent ButtonText="Create Make" make="make" OnValidSubmit="@CreateMake" />

@code{
	Make make = new Make();

	private async Task CreateMake()
	{
		await _client.PostAsJsonAsync(Endpoints.MakesEndpoint, make);
		_navManage.NavigateTo("/makes/");
	}
}